<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ScrollView
            android:id="@+id/video_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="85dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- CardView 1 -->
                <androidx.cardview.widget.CardView
                    android:background="@drawable/rounder_corner"
                    android:id="@+id/card_view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFD600">

                    <RelativeLayout
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- ImageView -->
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/uzbekistan"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/imageView" />

                        <!-- TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O'zbek adabiyoti"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/imageView"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/textView"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view122"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFD600">

                    <RelativeLayout
                        android:id="@+id/btn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- ImageView -->
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ggg"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/imageView1" />

                        <!-- TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xorijiy adabiyotilar"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/imageView1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/textView1"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFD600">

                    <RelativeLayout
                        android:id="@+id/btn12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- ImageView -->
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/nnn"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/imageView2" />

                        <!-- TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jaxon adabiyotilari"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/imageView2"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/textView2"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFD600">

                    <RelativeLayout
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- ImageView -->
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/tarixiy"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/imageView3" />

                        <!-- TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarixiy adabiyotlar"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/imageView3"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/textView3"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view34"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFD600">

                    <RelativeLayout
                        android:id="@+id/btn34"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- ImageView -->
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/reading"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/imageView34" />

                        <!-- TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bolalar adabiyotlar"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/imageView34"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/textView34"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>
</LinearLayout>
